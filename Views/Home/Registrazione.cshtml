@model Utente

@{
    ViewData["Title"] = "Registrazione";
}
 <style>
      
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f0f0f0;
        }
        .container {
            max-width: 800px;
            margin: 20px auto;
            padding: 20px;
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }
        h1 {
            text-align: center;
            color: #008000;
        }
        h2 {
            color: #b1c4a7;
        }
        p {
            line-height: 1.6;
            color: #333;
        }
    </style>
<h1>Modulo di registrazione</h1>
<p>Riempi i seguenti campi e registrati nel nostro sito</p>
<form asp-controller="Home" asp-action="Registrato" method="post">
    <div class="form-group">
        <label asp-for="Nome"></label>*
        <input type="text" asp-for="Nome" class="form-control" required />
        <span asp-validation-for="Nome" />
    </div>
    <div class="form-group">
        <label asp-for="Cognome"></label>*
        <input type="text" asp-for="Cognome" class="form-control" required/>
        <span asp-validation-for="Cognome" />
    </div>
    <div class="form-group">
        <label asp-for="EMail"></label>*
        <input type="text" asp-for="EMail" class="form-control" required/>
        <span asp-validation-for="EMail" />
    </div>
    <div class="form-group">
        <label asp-for="Password"></label>*
        <textarea asp-for="Password" class="form-control" required></textarea>
        <span asp-validation-for="Password" />
    </div>
    <div class="form-group">
        <label asp-for="Indirizzo"></label>* (Nome Via, Numero Civico, CAP)
        <textarea asp-for="Indirizzo" class="form-control"required></textarea>
        <span asp-validation-for="Indirizzo" />
    </div>
    
   <div class="form-group">
    <input type="checkbox" id="consenso" name="consenso" required>
    <label for="consenso">Acconsento al trattamento dei miei dati personali.* <a href="Privacy" target="_blank">Informativa sulla Privacy</a></label>
    </div>

    <div class="form-group">
        <input type="checkbox" id="comunicazioni" name="comunicazioni">
        <label for="comunicazioni">Desidero ricevere comunicazioni promozionali via mail</label>
    </div>
    <br>
    <div class="form-group">
        <div asp-validation-summary="All"></div>
        <button type="submit" class="btn btn-primary btn-lg"><i class="glyphicon glyphicon-send"></i>Registrati</button>
    </div>
        <br>
    Campi Obbligatori*
</form>
