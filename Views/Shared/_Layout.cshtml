@using Microsoft.AspNetCore.Http;
@inject IHttpContextAccessor HttpContextAccessor
@{
    string? valore = HttpContextAccessor?.HttpContext?.Session.GetString("login");

}

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Farmacia Palazzetti</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/basilico.karol._5h.Ecommerce.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
<a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index" style="color: #008000;"><strong>Farmacia Palazzetti</strong></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Farmaci">Tutti i farmaci</a>
                        </li>
                        <li class="nav-item">
                            @{
                                if(valore != "login")
                                {
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Login">Login</a> 
                                }
                                else{
                                    
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Logout">Logout</a>
                                }
                            }                                                                    
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Registrazione">Registrazione</a>
                        </li>
                         
                          <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Chi siamo</a>
                        </li>
                         <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                            </li>
                          <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Aiuto" >Aiuto e Contatti</a>                    
                            
  
                        <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Carrello">
                            <img src="/img/carrello.png" alt="Carrello" style="max-width: 28px; max-height: 28px; margin-left: 300px;">
                        </a>
                        </li>
                        
                      @{
                                if(valore != "sa")
                                {
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Login">Il Mio Profilo</a> 
                                }
                                else{
                                    
                                    <a class="nav-link text-dark"  asp-area="" asp-controller="Home" asp-action="Profilo">Il Mio Profilo</a>
                                  
                                }}


                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - Palazzetti SRL - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
